{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "pipe",
	"scopeName": "source.pipe",
	"patterns": [
		{
			"include": "#pipeline"
		},
		{
			"include": "#import"
		},
		{
			"include": "#vars"
		},
		{
			"include": "#config"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"embedded": {
			"patterns": [
				{
					"begin": "```(js|javascript)\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.pipe"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.pipe"
						}
					},
					"name": "meta.embedded.block.javascript.pipe",
					"patterns": [
						{
							"include": "source.js"
						}
					]
				},
				{
					"begin": "```typescript\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.pipe"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.pipe"
						}
					},
					"name": "meta.embedded.block.typescript.pipe",
					"patterns": [
						{
							"include": "source.ts"
						}
					]
				},
				{
					"begin": "```json\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.pipe"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.pipe"
						}
					},
					"name": "meta.embedded.block.json.pipe",
					"patterns": [
						{
							"include": "source.json"
						}
					]
				},
				{
					"begin": "```go\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.pipe"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.pipe"
						}
					},
					"name": "meta.embedded.block.go.pipe",
					"patterns": [
						{
							"include": "source.go"
						}
					]
				},
				{
					"begin": "```(yml|yaml)\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.pipe"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.pipe"
						}
					},
					"name": "meta.embedded.block.yaml.pipe",
					"patterns": [
						{
							"include": "source.yaml"
						}
					]
				},
				{
					"begin": "```(html|text)\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.pipe"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.pipe"
						}
					},
					"name": "meta.embedded.block.html.pipe",
					"patterns": [
						{
							"include": "text.html.derivative"
						}
					]
				},
				{
					"begin": "```(md|markdown)\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.pipe"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.pipe"
						}
					},
					"name": "meta.embedded.block.html.pipe",
					"patterns": [
						{
							"include": "text.html.markdown"
						}
					]
				},
				{
					"begin": "```python\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.pipe"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.pipe"
						}
					},
					"name": "meta.embedded.block.python.pipe",
					"patterns": [
						{
							"include": "source.python"
						}
					]
				},
				{
					"begin": "(```rhai|```)\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.pipe"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.pipe"
						}
					},
					"name": "meta.embedded.block.rhai.pipe",
					"patterns": [
						{
							"include": "source.rhai"
						}
					]
				},
				{
					"begin": "```php\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.pipe"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.pipe"
						}
					},
					"name": "meta.embedded.block.php.pipe",
					"patterns": [
						{
							"include": "source.php"
						}
					]
				},
				{
					"begin": "```(sh|bash|shell)\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.pipe"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.pipe"
						}
					},
					"name": "meta.embedded.block.shell.pipe",
					"patterns": [
						{
							"include": "source.shell"
						}
					]
				},
				{
					"begin": "```xml\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.pipe"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.pipe"
						}
					},
					"name": "meta.embedded.block.xml.pipe",
					"patterns": [
						{
							"include": "text.xml"
						}
					]
				},
				{
					"begin": "```hbs\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.pipe"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.pipe"
						}
					},
					"name": "meta.embedded.block.hbs.pipe",
					"patterns": [
						{
							"include": "text.html.handlebars"
						}
					]
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"comment": "Single line comments with double-slash",
					"match": "(\/\/)+.*",
					"captures": {
						"0": {
							"name": "comment.line.double-slash.pipe"
						}
					}
				},
				{
					"comment": "Multiple line comment block",
					"begin": "/\\*",
					"beginCaptures": {
						"0": {
							"name": "comment.block.documentation.pipe"
						}
					},
					"end": "\\*/",
					"endCaptures": {
						"0": {
							"name": "comment.block.documentation.pipe"
						}
					},
					"contentName": "comment.block.documentation.pipe"
				}
			]
		},
		"pipeline": {
			"patterns": [
				{
					"begin": "pipe \\s*([\\w-]+)((\\s([\\w-]+))|)\\s*\\{",
					"captures": {
						"0": {
							"name": "support.type.pipe"
						},
						"2": {
							"name": "entity.name.function.pipe"
						},
						"1": {
							"name": "storage.type.struct.pipe"
						}
					},
					"end": "\\}",
					"patterns": [
						{
							"include": "$self"
						},
						{
							"include": "#macro"
						},
						{
							"include": "#attach"
						},
						{
							"include": "#param"
						},
						{
							"include": "#interpolation"
						}
					]
				},
				{
					"begin": "pipe \\s*\\{",
					"captures": {
						"0": {
							"name": "support.type.pipe"
						}
					},
					"end": "\\}",
					"patterns": [
						{
							"include": "$self"
						},
						{
							"include": "#modules"
						},
						{
							"include": "#interpolation"
						}
					]
				}
			]
		},
		"import": {
			"patterns": [
				{
					"begin": "(import) \\s*(([\\w-]+)\\s*(\\s*(true|false|[0-9.]|\".*\"|\\[.*\\]|\\{.*\\}|\\$\\{.*\\})|)*\\s*)\\(",
					"beginCaptures": {
						"1": {
							"name": "support.type.pipe.import"
						},
						"2": {
							"name": "entity.name.function.macro.pipe",
							"patterns": [
								{
									"include": "#numeric"
								},
								{
									"include": "#constant"
								},
								{
									"include": "#boolean"
								},
								{
									"include": "#array"
								},
								{
									"include": "#map"
								},
								{
									"include": "#string"
								},
								{
									"include": "#interpolation"
								},
								{
									"include": "#string_interpolation"
								}
							]
						}
					},
					"end": "\\)",
					"patterns": [
						{
							"include": "$self"
						},
						{
							"include": "#param"
						},
						{
							"include": "#attach"
						},
						{
							"include": "#macro"
						}
					]
				},
				{
					"begin": "import \\s*\\{",
					"captures": {
						"0": {
							"name": "support.type.pipe.import"
						}
					},
					"end": "\\}",
					"patterns": [
						{
							"include": "$self"
						},
						{
							"include": "#macro"
						},
						{
							"include": "#param"
						}
					]
				}
			]
		},
		"vars": {
			"patterns": [
				{
					"begin": "var \\s*([\\w\\.-]+)\\s*(=)\\s*",
					"beginCaptures": {
						"0": {
							"name": "support.type.pipe"
						},
						"1": {
							"name": "variable.other.property.pipe"
						},
						"2": {
							"name": "keyword.operator.pipe"
						}
					},
					"end": "(?<!\\2)$",
					"endCaptures": {
						"0": {
							"name": "keyword.operator.pipe"
						}
					},
					"patterns": [
						{
							"include": "#numeric"
						},
						{
							"include": "#constant"
						},
						{
							"include": "#boolean"
						},
						{
							"include": "#array"
						},
						{
							"include": "#map"
						},
						{
							"include": "#embedded"
						},
						{
							"include": "#string"
						},
						{
							"include": "#string_interpolation"
						}
					]
				},
				{
					"begin": "var \\s*\\{",
					"captures": {
						"0": {
							"name": "support.type.pipe"
						}
					},
					"end": "\\}",
					"patterns": [
						{
							"include": "$self"
						},
						{
							"include": "#param"
						},
						{
							"include": "#interpolation"
						},
						{
							"include": "#macro"
						}
					]
				}
			]
		},
		"config": {
			"patterns": [
				{
					"begin": "config\\s*\\{",
					"captures": {
						"0": {
							"name": "support.type.pipe"
						}
					},
					"end": "\\}",
					"patterns": [
						{
							"include": "$self"
						},
						{
							"include": "#param"
						},
						{
							"include": "#embedded"
						},
						{
							"include": "#interpolation"
						},
						{
							"include": "#macro"
						}
					]
				}
			]
		},
		"modules": {
			"patterns": [
				{
					"begin": "([\\w-]+)((\\s([\\w-]+))|)\\s*\\{",
					"beginCaptures": {
						"0": {
							"name": "entity.name.function.pipe"
						},
						"1": {
							"name": "storage.type.struct.pipe"
						}
					},
					"end": "\\}",
					"patterns": [
						{
							"include": "$self"
						},
						{
							"include": "#macro"
						},
						{
							"include": "#attach"
						},
						{
							"include": "#param"
						},
						{
							"include": "#interpolation"
						}
					]
				}
			]
		},
		"macro": {
			"patterns": [
				{
					"begin": "([\\w-]+)\\s*(\\s*(true|false|[0-9.]|\".*\"|\\[.*\\]|\\{.*\\}|\\$\\{.*\\})|)*\\s*\\(",
					"beginCaptures": {
						"0": {
							"name": "entity.name.function.macro.pipe",
							"patterns": [
								{
									"include": "#numeric"
								},
								{
									"include": "#constant"
								},
								{
									"include": "#boolean"
								},
								{
									"include": "#array"
								},
								{
									"include": "#map"
								},
								{
									"include": "#string"
								},
								{
									"include": "#interpolation"
								},
								{
									"include": "#string_interpolation"
								}
							]
						},
						"1": {
							"name": "entity.name.function.macro.pipe"
						}
					},
					"end": "\\)",
					"patterns": [
						{
							"include": "$self"
						},
						{
							"include": "#param"
						},
						{
							"include": "#attach"
						},
						{
							"include": "#macro"
						}
					]
				}
			]
		},
		"attach": {
			"patterns": [
				{
					"begin": "([|]|pipe)\\s*([\\w-]+)((\\s*([\\w-]+))|)\\s*\\{",
					"end": "}",
					"beginCaptures": {
						"0": {
							"name": "entity.name.function.pipe"
						},
						"1": {
							"name": "keyword.control.pipe"
						},
						"2": {
							"name": "storage.type.struct.pipe"
						}
					},
					"patterns": [
						{
							"include": "$self"
						},
						{
							"include": "#macro"
						},
						{
							"include": "#attach"
						},
						{
							"include": "#param"
						},
						{
							"include": "#interpolation"
						}
					]
				},
				{
					"match": "([|]|pipe)\\s*([\\w-]+)",
					"captures": {
						"1": {
							"name": "keyword.control.pipe"
						},
						"0": {
							"name": "entity.name.function.pipe"
						}
					},
					"patterns": [
						{
							"include": "$self"
						}
					]
				},
				{
					"match": "([|]|pipe)\\s*([\\w-]+)",
					"captures": {
						"1": {
							"name": "keyword.control.pipe"
						},
						"0": {
							"name": "entity.name.function.pipe"
						}
					},
					"patterns": [
						{
							"include": "$self"
						}
					]
				},
				{
					"match": "([|]|pipe)\\s*([@][\\w-]+)",
					"captures": {
						"1": {
							"name": "keyword.control.pipe"
						},
						"0": {
							"name": "variable.language.self.pipe"
						}
					},
					"patterns": [
						{
							"include": "$self"
						}
					]
				}
			]
		},
		"param": {
			"patterns": [
				{
					"begin": "([\\w\\.-]+)\\s*(=)\\s*",
					"beginCaptures": {
						"1": {
							"name": "variable.other.property.pipe"
						},
						"2": {
							"name": "keyword.operator.pipe"
						}
					},
					"end": "(?<!\\2)$",
					"endCaptures": {
						"0": {
							"name": "keyword.operator.pipe"
						}
					},
					"patterns": [
						{
							"include": "#numeric"
						},
						{
							"include": "#constant"
						},
						{
							"include": "#boolean"
						},
						{
							"include": "#array"
						},
						{
							"include": "#map"
						},
						{
							"include": "#embedded"
						},
						{
							"include": "#string"
						},
						{
							"include": "#interpolation"
						},
						{
							"include": "#string_interpolation"
						}
					]
				}
			]
		},
		"interpolation": {
			"patterns": [
				{
					"begin": "\\$\\{",
					"beginCaptures": {
						"0": {
							"name": "keyword.operator.pipe"
						}
					},
					"end": "\\}",
					"endCaptures": {
						"0": {
							"name": "keyword.operator.pipe"
						}
					},
					"patterns": [
						{
							"include": "source.rhai"
						}
					]
				}
			]
		},
		"array": {
			"patterns": [
				{
					"begin": "\\[",
					"end": "\\]",
					"patterns": [
						{
							"include": "#numeric"
						},
						{
							"include": "#constant"
						},
						{
							"include": "#boolean"
						},
						{
							"include": "#string"
						},
						{
							"include": "#interpolation"
						},
						{
							"include": "#map"
						},
						{
							"include": "$self"
						},
						{
							"include": "#string_interpolation"
						}
					]
				}
			]
		},
		"map": {
			"patterns": [
				{
					"begin": "\\{",
					"end": "\\}",
					"patterns": [
						{
							"begin": "(\"[\\w\\s\\.-]+\")\\s*(:)",
							"beginCaptures": {
								"1": {
									"name": "string.quoted.double.pipe"
								},
								"2": {
									"name": "keyword.operator.pipe"
								}
							},
							"end": "(?<!\\2)\\s*($|(?=\\}))",
							"endCaptures": {
								"0": {
									"name": "keyword.operator.pipe"
								}
							},
							"patterns": [
								{
									"include": "#numeric"
								},
								{
									"include": "#constant"
								},
								{
									"include": "#boolean"
								},
								{
									"include": "#string"
								},
								{
									"include": "#interpolation"
								},
								{
									"include": "#array"
								},
								{
									"include": "$self"
								},
								{
									"include": "#string_interpolation"
								}
							]
						}
					]
				}
			]
		},
		"numeric": {
			"patterns": [
				{
					"comment": "Numbers in decimal with optional suffixes",
					"match": "\\b[0-9\\.]+([kKmMgG]b?)?\\b",
					"captures": {
						"0": {
							"name": "constant.numeric.pipe"
						}
					}
				}
			]
		},
		"boolean": {
			"patterns": [
				{
					"match": "\\b(true|false)\\b",
					"captures": {
						"0": {
							"name": "constant.language.boolean.pipe"
						}
					}
				}
			]
		},
		"string": {
			"patterns": [
				{
					"comment": "Usual string",
					"begin": "\"",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.pipe"
						}
					},
					"end": "\"",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.end.pipe"
						}
					},
					"patterns": [
						{
							"match": "[^\"]",
							"captures": {
								"0": {
									"name": "string.quoted.double.pipe"
								}
							}
						}
					]
				}
			]
		},
		"string_interpolation": {
			"patterns": [
				{
					"comment": "String with interpolation",
					"begin": "`",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.pipe"
						}
					},
					"end": "`",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.end.pipe"
						}
					},
					"patterns": [
						{
							"include": "#interpolation"
						},
						{
							"match": "[^`]",
							"captures": {
								"0": {
									"name": "string.quoted.double.pipe"
								}
							}
						}
					]
				}
			]
		}
	}
}