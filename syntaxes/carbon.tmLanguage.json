{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "carbon-pipeline",
	"scopeName": "source.c6",
	"patterns": [
		{
			"include": "#pipeline"
		},
		{
			"include": "#import"
		},
		{
			"include": "#vars"
		},
		{
			"include": "#config"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"embedded": {
			"patterns": [
				{
					"begin": "```(js|javascript)\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.c6"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.c6"
						}
					},
					"name": "meta.embedded.block.javascript.c6",
					"patterns": [
						{
							"include": "source.js"
						}
					]
				},
				{
					"begin": "```typescript\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.c6"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.c6"
						}
					},
					"name": "meta.embedded.block.typescript.c6",
					"patterns": [
						{
							"include": "source.ts"
						}
					]
				},
				{
					"begin": "```json\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.c6"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.c6"
						}
					},
					"name": "meta.embedded.block.json.c6",
					"patterns": [
						{
							"include": "source.json"
						}
					]
				},
				{
					"begin": "```go\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.c6"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.c6"
						}
					},
					"name": "meta.embedded.block.go.c6",
					"patterns": [
						{
							"include": "source.go"
						}
					]
				},
				{
					"begin": "```(yml|yaml)\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.c6"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.c6"
						}
					},
					"name": "meta.embedded.block.yaml.c6",
					"patterns": [
						{
							"include": "source.yaml"
						}
					]
				},
				{
					"begin": "```(html|text)\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.c6"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.c6"
						}
					},
					"name": "meta.embedded.block.html.c6",
					"patterns": [
						{
							"include": "text.html.derivative"
						}
					]
				},
				{
					"begin": "```(md|markdown)\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.c6"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.c6"
						}
					},
					"name": "meta.embedded.block.html.c6",
					"patterns": [
						{
							"include": "text.html.markdown"
						}
					]
				},
				{
					"begin": "```python\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.c6"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.c6"
						}
					},
					"name": "meta.embedded.block.python.c6",
					"patterns": [
						{
							"include": "source.python"
						}
					]
				},
				{
					"begin": "(```rhai|```)\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.c6"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.c6"
						}
					},
					"name": "meta.embedded.block.rhai.c6",
					"patterns": [
						{
							"include": "source.rhai"
						}
					]
				},
				{
					"begin": "```php\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.c6"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.c6"
						}
					},
					"name": "meta.embedded.block.php.c6",
					"patterns": [
						{
							"include": "source.php"
						}
					]
				},
				{
					"begin": "```(sh|bash|shell)\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.c6"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.c6"
						}
					},
					"name": "meta.embedded.block.shell.c6",
					"patterns": [
						{
							"include": "source.shell"
						}
					]
				},
				{
					"begin": "```xml\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.c6"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.c6"
						}
					},
					"name": "meta.embedded.block.xml.c6",
					"patterns": [
						{
							"include": "text.xml"
						}
					]
				},
				{
					"begin": "```hbs\n",
					"end": "```",
					"beginCaptures": {
						"0": {
							"name": "punctuation.code.open.c6"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.code.close.c6"
						}
					},
					"name": "meta.embedded.block.hbs.c6",
					"patterns": [
						{
							"include": "text.html.handlebars"
						}
					]
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"comment": "Single line comments with double-slash",
					"match": "(\/\/)+.*",
					"captures": {
						"0": {
							"name": "comment.line.double-slash.c6"
						}
					}
				},
				{
					"comment": "Multiple line comment block",
					"begin": "/\\*",
					"beginCaptures": {
						"0": {
							"name": "comment.block.documentation.c6"
						}
					},
					"end": "\\*/",
					"endCaptures": {
						"0": {
							"name": "comment.block.documentation.c6"
						}
					},
					"contentName": "comment.block.documentation.c6"
				}
			]
		},
		"pipeline": {
			"patterns": [
				{
					"begin": "pipeline\\s*\\{",
					"captures": {
						"0": {
							"name": "support.type.c6"
						}
					},
					"end": "\\}",
					"patterns": [
						{
							"include": "$self"
						},
						{
							"include": "#modules"
						},
						{
							"include": "#interpolation"
						}
					]
				}
			]
		},
		"import": {
			"patterns": [
				{
					"begin": "import\\s*\\{",
					"captures": {
						"0": {
							"name": "support.type.c6.import"
						}
					},
					"end": "\\}",
					"patterns": [
						{
							"include": "$self"
						},
						{
							"include": "#macro"
						},
						{
							"include": "#param"
						}
					]
				}
			]
		},
		"vars": {
			"patterns": [
				{
					"begin": "vars\\s*\\{",
					"captures": {
						"0": {
							"name": "support.type.c6"
						}
					},
					"end": "\\}",
					"patterns": [
						{
							"include": "$self"
						},
						{
							"include": "#param"
						},
						{
							"include": "#interpolation"
						},
						{
							"include": "#macro"
						}
					]
				}
			]
		},
		"config": {
			"patterns": [
				{
					"begin": "config\\s*\\{",
					"captures": {
						"0": {
							"name": "support.type.c6"
						}
					},
					"end": "\\}",
					"patterns": [
						{
							"include": "$self"
						},
						{
							"include": "#param"
						},
						{
							"include": "#embedded"
						},
						{
							"include": "#interpolation"
						},
						{
							"include": "#macro"
						}
					]
				}
			]
		},
		"modules": {
			"patterns": [
				{
					"begin": "([\\w-]+)((\\s([\\w-]+))|)\\s*\\{",
					"beginCaptures": {
						"0": {
							"name": "entity.name.function.c6"
						},
						"1": {
							"name": "storage.type.struct.c6"
						}
					},
					"end": "\\}",
					"patterns": [
						{
							"include": "$self"
						},
						{
							"include": "#macro"
						},
						{
							"include": "#attach"
						},
						{
							"include": "#param"
						},
						{
							"include": "#interpolation"
						}
					]
				}
			]
		},
		"macro": {
			"patterns": [
				{
					"begin": "([\\w-]+)\\s*(\\s*(true|false|[0-9.]|\".*\"|\\[.*\\]|\\{.*\\}|\\$\\{.*\\})|)*\\s*\\(",
					"beginCaptures": {
						"0": {
							"name": "entity.name.function.macro.c6",
							"patterns": [
								{
									"include": "#numeric"
								},
								{
									"include": "#constant"
								},
								{
									"include": "#boolean"
								},
								{
									"include": "#array"
								},
								{
									"include": "#map"
								},
								{
									"include": "#string"
								},
								{
									"include": "#interpolation"
								},
								{
									"include": "#string_interpolation"
								}
							]
						},
						"1": {
							"name": "entity.name.function.macro.c6"
						}
					},
					"end": "\\)",
					"patterns": [
						{
							"include": "$self"
						},
						{
							"include": "#param"
						},
						{
							"include": "#attach"
						},
						{
							"include": "#macro"
						}
					]
				}
			]
		},
		"attach": {
			"patterns": [
				{
					"match": "attach ([\\w-]+)",
					"captures": {
						"0": {
							"name": "keyword.control.c6"
						},
						"1": {
							"name": "entity.name.function.c6"
						}
					},
					"patterns": [
						{
							"include": "$self"
						},
						{
							"include": "#param"
						}
					]
				}
			]
		},
		"param": {
			"patterns": [
				{
					"begin": "([\\w\\.-]+)\\s*(=)\\s*",
					"beginCaptures": {
						"1": {
							"name": "variable.parameter.c6"
						},
						"2": {
							"name": "keyword.operator.c6"
						}
					},
					"end": "(?<!\\2)$",
					"endCaptures": {
						"0": {
							"name": "keyword.operator.c6"
						}
					},
					"patterns": [
						{
							"include": "#numeric"
						},
						{
							"include": "#constant"
						},
						{
							"include": "#boolean"
						},
						{
							"include": "#array"
						},
						{
							"include": "#map"
						},
						{
							"include": "#embedded"
						},
						{
							"include": "#string"
						},
						{
							"include": "#interpolation"
						},
						{
							"include": "#string_interpolation"
						}
					]
				}
			]
		},
		"interpolation": {
			"patterns": [
				{
					"begin": "\\$\\{",
					"beginCaptures": {
						"0": {
							"name": "keyword.operator.c6"
						}
					},
					"end": "\\}",
					"endCaptures": {
						"0": {
							"name": "keyword.operator.c6"
						}
					},
					"patterns": [
						{
							"include": "source.rhai"
						}
					]
				}
			]
		},
		"array": {
			"patterns": [
				{
					"begin": "\\[",
					"end": "\\]",
					"patterns": [
						{
							"include": "#numeric"
						},
						{
							"include": "#constant"
						},
						{
							"include": "#boolean"
						},
						{
							"include": "#string"
						},
						{
							"include": "#interpolation"
						},
						{
							"include": "#map"
						},
						{
							"include": "$self"
						},
						{
							"include": "#string_interpolation"
						}
					]
				}
			]
		},
		"map": {
			"patterns": [
				{
					"begin": "\\{",
					"end": "\\}",
					"patterns": [
						{
							"begin": "(\"[\\w\\s\\.-]+\")\\s*(:)",
							"beginCaptures": {
								"1": {
									"name": "string.quoted.double.c6"
								},
								"2": {
									"name": "keyword.operator.c6"
								}
							},
							"end": "(?<!\\2)\\s*($|(?=\\}))",
							"endCaptures": {
								"0": {
									"name": "keyword.operator.c6"
								}
							},
							"patterns": [
								{
									"include": "#numeric"
								},
								{
									"include": "#constant"
								},
								{
									"include": "#boolean"
								},
								{
									"include": "#string"
								},
								{
									"include": "#interpolation"
								},
								{
									"include": "#array"
								},
								{
									"include": "$self"
								},
								{
									"include": "#string_interpolation"
								}
							]
						}
					]
				}
			]
		},
		"numeric": {
			"patterns": [
				{
					"comment": "Numbers in decimal with optional suffixes",
					"match": "\\b[0-9\\.]+([kKmMgG]b?)?\\b",
					"captures": {
						"0": {
							"name": "constant.numeric.c6"
						}
					}
				}
			]
		},
		"boolean": {
			"patterns": [
				{
					"match": "\\b(true|false)\\b",
					"captures": {
						"0": {
							"name": "constant.language.boolean.c6"
						}
					}
				}
			]
		},
		"string": {
			"patterns": [
				{
					"comment": "Usual string",
					"begin": "\"",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.c6"
						}
					},
					"end": "\"",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.end.c6"
						}
					},
					"patterns": [
						{
							"match": "[^\"]",
							"captures": {
								"0": {
									"name": "string.quoted.double.c6"
								}
							}
						}
					]
				}
			]
		},
		"string_interpolation": {
			"patterns": [
				{
					"comment": "String with interpolation",
					"begin": "`",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.c6"
						}
					},
					"end": "`",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.end.c6"
						}
					},
					"patterns": [
						{
							"include": "#interpolation"
						},
						{
							"match": "[^`]",
							"captures": {
								"0": {
									"name": "string.quoted.double.c6"
								}
							}
						}
					]
				}
			]
		}
	}
}